{% extends 'base.html.twig' %}

{% block title %}Description{% endblock %}

{% block body %}
 <main class="contenair">

  <h1 class="descriptTitle">Description</h1>

    <div class="alldetails">

      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">

          <div class="carousel-item active">
            <img src="{{asset("/assets/img/"~produit.img)}}" class="d-block w-100" alt="...">
          </div>

          {% for item in produit.images %}

          <div class="carousel-item">
            <img src="{{asset("/assets/img/"~ item.images)}}" class="d-block w-100" alt="...">   
          </div>

          {% endfor %}
        </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>

          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
      </div>

      <div class="descript">
      
        <div class="infos">
          <h3>{{produit.marque}} {{produit.nom}}</h3>
  
              <p>Condition physique: <b>{{produit.etat}}</b></p>
              <span>{{ produit.prix }}â‚¬</span>
              <p>{{produit.description}}</p>
              
              <button class='addBasket' data-bouton='description' data-id='{{produit.id}}'>Ajouter au panier</button>

{% if app.user %}

							<span class="fav" data-id="{{ produit.id }}">
								{% if isFavorite %}
									<i class="fa-solid fa-bookmark" style="color: #7530ca;"></i>
								{% else %}
									<i class="fa-regular fa-bookmark"></i>
								{% endif %}
									</span>
									
								{% endif %}

  </div>
      </div>
    </div>
</main>
{% endblock %}

