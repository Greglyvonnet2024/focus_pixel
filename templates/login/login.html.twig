{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="contenair">

  <div class="loginform">

    <div class="login">

      <h1>Connexion</h1>

      {% if error %}
        <div class="alert alert-danger">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <form method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="sub">Connexion</button>
      </form>

      <p><a href="#">Mot de passe oublié ?</a></p>
      <p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Créer un compte</a></p>

    </div>
  </div>
</main>
{% endblock %}




