{% extends 'base.html.twig' %}

{% block title %}
	Hello ProductController!
{% endblock %}

{% block body %}

<main class="contenair">

	<div class="productSell">

		<h2 class="titlePage">{{titre}}</h2>	

			<div class="prodAdd">

				{% for item in products %}
					<div class="product">
						
						<div class="prodImg">
							<img src="{{ asset("/assets/img/" ~ item.img) }}" alt="{{item.nom}}">
						</div>

						<div class="prodInfo">
							<h3>{{ item.marque }}, {{ item.nom }}</h3>
							<p>Condition physique: <b>{{item.etat}}</b></p>
							<span>{{ item.prix }}â‚¬</span>
						</div>

						<div class="link">
							<button><a href="{{path('app_description', {id : item.id})}}">En savoir plus</a></button>
							{# Voir pour activer le bouton favoris #}
							{# <button class="btn shadow-1 btn-small btn-circle primary"><span class="iconify-inline" data-icon="mdi:thumb-up"></span></button> #}
							<button class="addBasket" data-bouton='page-prod' data-id="{{item.id}}">Ajouter au panier</button>
						</div>
					</div>
				{% endfor %}
					
			</div>
	</div>
</main>


{% endblock %}
