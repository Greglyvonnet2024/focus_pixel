{% extends 'base.html.twig' %}

{% block body %}

<main class="contenair">

    {# Mon image d'entête #}
    {# <div class="hero"></div> #}

	{# Mon bloc DIV concernant mes produits récemment ajoutés #}
    <div class="recentlyAdd">
    
    	<h2>Produits récemment ajoutés :</h2>

			{# prodAdd est anciennement "productAdd" #}
        	<div class="prodAdd">
				{% for item in products %}

					<div class="product">

						{# prodImg est anciennement "productImg" #}
						<div class="prodImg">
							<img src="{{ asset("/assets/img/" ~ item.img) }}" alt="{{item.nom}}">
						</div>

							{# prodInfo est anciennement "productInfo" #}
							<div class="prodInfo">

								<h3>{{ item.marque }} {{ item.nom }}</h3>

								<p>Etat physique: {{item.etat}}</p>

								<p>Prix:{{ item.prix }}€</p>

									<div class="link">
										{# <p><a href="{{path('app_description', {id : item.id})}}">En savoir plus</a></p> #}

										<button><a href="{{path('app_description', {id : item.id})}}">En savoir plus</a></button>

										<button class="addBasket ajout" data-bouton="page-prod" data-id="{{item.id}}">Ajouter au panier</button>
									</div>

							</div>
					
					</div>

				{% endfor %}

			</div>
        
    </div>


</main>




<footer>

</footer>
{% endblock %}
